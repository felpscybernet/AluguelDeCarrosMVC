@model IEnumerable<AluguelDeCarrosMVC.Models.Car>

@{
    ViewData["Title"] = "Frota de Veículos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Adicionar Novo Veículo</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Modelo)</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Marca) - @Html.DisplayFor(modelItem => item.Ano)</h6>
                    <p class="card-text">
                        <strong>Placa:</strong> @Html.DisplayFor(modelItem => item.Placa)<br>
                        <strong>Diária:</strong> R$ @Html.DisplayFor(modelItem => item.PrecoDiaria)
                    </p>
                    <div class="mt-auto">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>